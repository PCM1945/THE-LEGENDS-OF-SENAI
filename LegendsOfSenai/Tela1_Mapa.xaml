<Page
    x:Class="LegendsOfSenai.Tela1_Mapa"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LegendsOfSenai"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="1000" Height="800" >

    <ScrollViewer Height="650" >
        <Canvas x:Name="mapa" Background="White" Width="800" Height="800" PointerPressed="Target_PointerPressed">

            <Image Name="cavaleiro"  Width="40" Height="40" Source="Assets/charters/Warrrior_spt/guerreiro.png" 
               Canvas.Left="440" Canvas.Top="440" Canvas.ZIndex="10">
            </Image>

            <Image Name="mago" Width="40" Height="40" Source="Assets/charters/mage_spt/mage_frente_parado.png" Canvas.ZIndex="10"
               Canvas.Left="400" Canvas.Top="400">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="-90"/>
                </Image.RenderTransform>
            </Image>
            <Image Name="pedra_de_crack_colorida" Width="20" Height="20" Source=" Assets\itens\pedra.png" Canvas.ZIndex="10" Canvas.Left="16" Canvas.Top="7" >
                
            </Image>

            <Image Name="open_map" Width="800" Height="800"
                Source="Assets/telas/open_map.png" Canvas.Left="5" Canvas.Top="-4">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout/>
                </FlyoutBase.AttachedFlyout>
            </Image>
            <!-- INVENTARIO-->
            <StackPanel Name="Inventario" Height="250"    Canvas.Left="-96" Width="100" Visibility="Visible" Opacity="0" Background="BurlyWood" Canvas.Top="128">
                <TextBlock Name="text_invent" Text="Inventario"></TextBlock>
                <ScrollViewer Height="230" Width="100">
                    <ListView Name="Invetario_list" Canvas.Top="10" Canvas.Left="10" >

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <!-- STACK DE ITENS-->
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Nome}"/>
                                    <TextBlock Text="{Binding Tipo}"/>
                                </StackPanel>
                                <!-- STACK DE ITENS-->
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
            <!-- INVENTARIO-->
            <Button x:Name="Inventario_button" Content="BAG" Background="Beige" Canvas.Left="11" Canvas.Top="744" Height="38" Width="58" Click="Inventario_Click"/>

            <!-- Player Info-->
            <StackPanel Name="InfoPlayerBox" Height="101"    Canvas.Left="-96" Width="100" Visibility="Visible" Opacity="100" Background="Aqua" Canvas.Top="8">

                <ListView Name="Player_info" Canvas.Top="10" Canvas.Left="10" >

                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Gold:"/>
                                <TextBlock Text="{Binding Gold}"/>

                            </StackPanel>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackPanel>
            <!--- Flyout Recrutamento -->
            <Rectangle Name="RecrutamentoRect" Height="25" Canvas.Left="8" Canvas.Top="0" Width="90" Fill="Brown" Tapped="AbreRecrutamento">
                <FlyoutBase.AttachedFlyout >
                    <MenuFlyout >
                        <MenuFlyoutItem  Text="Warrior" Click="Recrutamento"/>
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
            </Rectangle>
            <TextBlock x:Name="RecrutamentoText" Text="Recrutamento" Canvas.Left="5" IsHitTestVisible="False"/>
            <!--- Flyout Recrutamento -->

            <!-- Player Info-->
        </Canvas>
    </ScrollViewer>

</Page>
