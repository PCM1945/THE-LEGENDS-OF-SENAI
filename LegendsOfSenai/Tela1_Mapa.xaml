<Page
    x:Class="LegendsOfSenai.Tela1_Mapa"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LegendsOfSenai"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="900" Height="800" >

    <Canvas x:Name="mapa" Background="White" Width="800" Height="800" PointerPressed="Target_PointerPressed">

        <Image Name="cavaleiro"  Width="40" Height="40" Source="Assets/charters/Warrrior_spt/guerreiro.png" 
               Canvas.Left="440" Canvas.Top="440" Canvas.ZIndex="10">
        </Image>

        <Image Name="mago" Width="40" Height="40" Source="Assets/charters/mage_spt/mage_frente_parado.png" Canvas.ZIndex="10"
               Canvas.Left="400" Canvas.Top="400">
            <Image.RenderTransform>
                <CompositeTransform Rotation="-90"/>
            </Image.RenderTransform>
        </Image>

        <Image Name="open_map" Width="800" Height="800"
                Source="Assets/telas/open_map.png"/>
    </Canvas>
</Page>
