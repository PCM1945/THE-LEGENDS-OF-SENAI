        <Image x:Name="skillPlayer2" Source="Assets/itens/para-batalha/magic.png" Canvas.ZIndex="10" 
               Width="150" Height="113" Canvas.Left="686" Canvas.Top="505" RenderTransformOrigin="0.49,1.013" />

        <Button x:Name = "AtkBas1" Content ="ATK BASICO" Canvas.ZIndex="10" Canvas.Left="33" 
                Canvas.Top="526" Height="70" Width="100" Background="Gold" Click= "botao_AtkBas1"/>
