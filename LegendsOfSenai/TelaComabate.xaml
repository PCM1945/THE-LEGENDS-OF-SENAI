        <Image x:Name="imgPlayer1" Source="Assets/characters/Warrrior_spt/humano/warrior.png" Canvas.ZIndex="10" 
               Width="150" Height="190" Canvas.Left="150" Canvas.Top="340" RenderTransformOrigin="0.49,0.539" />
        <Image x:Name="skillPlayer1" Source="Assets/itens/para-batalha/magic.png" Canvas.ZIndex="10" 
               Width="150" Height="113" Canvas.Left="143" Canvas.Top="508" RenderTransformOrigin="0.49,1.013" />
